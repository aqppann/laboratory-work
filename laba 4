// 1 завдання (15 варіант)
#include <iostream>
using namespace std;

int main() {
    int N;
    cout <<"enter a three-digit number: ";
    cin >> N;

    if (N < 100 || N > 999) {
        cout <<"the number is not three-digit";
    }

    int hundreds = N / 100;       
    int dozens = (N / 10) % 10;  
    int units = N % 10; 

    int sum = 0;
    if (hundreds > 5) sum += hundreds;
    if (dozens > 5) sum += dozens;
    if (units > 5) sum += units;

    cout << "sum of digits greater than 5: " << sum;
}

// 2 завдання (15 варіант)
#include <iostream>
using namespace std;

int main() {
    int code;
    cout <<"enter product code (1-6): ";
    cin >> code;

    switch (code) {
        case 1:
            cout << "product 1: price = 120 UAH, quantity = 50 pcs\n";
            break;
        case 2:
            cout << "product 2: price = 250 UAH, quantity = 20 pcs\n";
            break;
        case 3:
            cout << "product 3: price = 80 UAH, quantity = 100 pcs\n";
            break;
        case 4:
            cout << "product 4: price = 300 UAH, quantity = 15 pcs\n";
            break;
        case 5:
            cout << "product 5: price = 500 UAH, quantity = 7 pcs\n";
            break;
        case 6:
            cout << "product 6: price = 45 UAH, quantity = 200 pcs\n";
            break;
        default: 
            cout << "invalid product code!\n";
    }
}
