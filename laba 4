// 6 завдання
#include <iostream>
using namespace std;

int main(void) {
    bool answer;
    int value;

    cout << "Enter a value: ";
    cin >> value;

    answer = (value >= 0 && value < 10) || (value * 2 < 20 && value - 2 > -2) || (value - 1 > 1 && value / 2 < 10) || (value == 111);
    cout << (answer ? "THAT'S TRUE :)" : "THAT'S NOT TRUE :(");
}

// 7 завдання 
#include <iostream>
#include <iomanip>  
using namespace std;

int main() {
    float a, b, c, d, e;

    cout << "Enter your first number:\n";
    cin  >> a;
    cout << "Enter your second number:\n";
    cin  >> b;
    cout << "Enter your third number:\n";
    cin  >> c;
    cout << "Enter your fourth number:\n";
    cin  >> d;
    cout << "Enter your fifth number:\n";
    cin  >> e;

    cout<<"formatted list\n";
    cout << a << '\n';                         
    cout << fixed << setprecision(2) << b <<'\n';  
    cout << fixed << setprecision(6) << c << '\n';  
    cout << fixed << setprecision(2) << d << '\n';  
    cout << fixed << setprecision(0) << e << '\n';  
}

// 8 завдання 
#include <iostream>
#include <cmath>  
using namespace std;

int main() {
    int num1, num2;
    cout << "enter first number: ";
    cin >> num1;
    cout << "enter second number: ";
    cin >> num2;

 
    double res1 = 1.0 / num1;
    double res2 = 1.0 / num2;
    double epsilon = 0.000001;

    if (fabs(res1 - res2) < epsilon) {
        cout << "Results are equal (by 0.000001 epsilon)";
    } else {
        cout << "Results are not equal (by 0.000001 epsilon)";
    }
}

// 9 завдання 
#include <iostream>
#include <cmath>
using namespace std;

int main() {
    int a,b,c,d;
    cout << "enter first number (1-255): ";
    cin >> a;
    while (a < 1 || a > 255) {
        cout << "error, please enter a number between 1 and 255: ";
        cin >> a;
    }
    cout << "enter second number (1-255): ";
    cin >> b;
    while (b < 1 || b > 255) {
        cout << "error, please enter a number between 1 and 255: ";
        cin >> b;
    }
    cout << "enter third number (1-255): ";
    cin >> c;
    while (c < 1 || c > 255) {
        cout << "error, please enter a number between 1 and 255: ";
        cin >> c;
    }
    cout << "enter fourth number (1-255): ";
    cin >> d;
    while (d < 1 || d > 255) {
        cout << "error, please enter a number between 1 and 255: ";
        cin >> d;
    }
    cout << "your IP address is: "<< a<< "."<< b<< "."<< c<< "."<<d;
}
