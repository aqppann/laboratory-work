#include <iostream>
using namespace std;

int main(void) {
    int vector[] = { 3, -5, 7, 10, -4, 14, 5, 2, -13 };
    int n = sizeof(vector) / sizeof(vector[0]);

    int* curr = vector;      
    int* minEl = vector;       

    for (int i = 0; i < n; i++) {
        curr++;                 
        if (*curr < *minEl) {
            minEl = curr;
        }
    }
    cout << "smallest element of an array: " << *minEl;
}

//2ex
#include <iostream>
using namespace std;

int main(void) {
    int matrix[10][10] = {};

    int* curr = &matrix[0][0];   

    for (int i = 1; i <= 10; i++) {
        for (int j = 1; j <= 10; j++) {
            *curr = i * j;  
            curr++;                   
        }
    }
    
    for (int i = 0; i < 10; i++) {
        for (int j = 0; j < 10; j++) {
            cout.width(4);
            cout << matrix[i][j];
        }
        cout << endl;
    }
    return 0;
}
