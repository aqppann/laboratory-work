// 3ex
#include <iostream>
#include <cstdlib>  
#include <ctime>
using namespace std;

int main() {
    srand(time(NULL));

    int n;
    cout << "enter the number of items: ";
    cin >> n;

    int a[50];
    cout << "initial array:\n";
    for (int i = 0; i < n; i++) {
        a[i] = rand() % 100; 
        cout << a[i] << " ";
    }
    cout << endl;

    int mini = 0, maxi = 0;
    for (int i = 1; i < n; i++) {
        if (a[i] < a[mini]) mini = i;
        if (a[i] > a[maxi]) maxi = i;
    }

    int temp = a[mini];
    a[mini] = a[maxi];
    a[maxi] = temp;

    cout << "array after swapping minimum and maximum:\n";
    for (int i = 0; i < n; i++) {
        cout << a[i] << " ";
    }
}

// 4 ex
#include <iostream>
#include <cstdlib>  
#include <ctime>    
using namespace std;

int main() {
    srand(time(NULL)); 

    int n;
    cout << "enter the number of array elements: ";
    cin >> n;

    int a[30];

    cout << "array: ";
    for (int i = 0; i < n; i++) {
        a[i] = rand() % 100; 
        cout << a[i] << " ";
    }
    cout << endl;

    int A;
    cout << "enter number A: ";
    cin >> A;
    
    int count = 0;
    for (int i = 0; i < n; i++) {
        if (a[i] > A) {
            count++;
        }
    }
    
    cout << "number of elements greater than A: "<< count << endl;
}

// 5 завдання
#include <iostream>
#include <cstdlib>
#include <ctime>
using namespace std;

int main() {
    srand(time(NULL));

    int n;
    cout << "enter array size: ";
    cin >> n;

    int arr[n];
    
    for (int i = 0; i < n; i++) {
        arr[i] = rand() % 100;
        cout << arr[i] << " ";
    }
    cout << endl;
    
    for (int i = 0; i < n - 1; i++) {
        for (int j = 0; j < n - i - 1; j++) {
            if (arr[j] > arr[j + 1]) {
                swap(arr[j], arr[j + 1]);
            }
        }
    }

    cout << "Second largest element: " << arr[n - 2] << endl;
}

// 6 завдання
#include <iostream>
#include <cstdlib>
#include <ctime>
using namespace std;

int main() {
    const int SIZE = 10;
    int arr[SIZE];

    srand(time(NULL));
    cout << "array: ";
    for (int i = 0; i < SIZE; i++) {
        arr[i] = rand() % 5 - 2;  // числа: -2, -1, 0, 1, 2
        cout << arr[i] << " ";
    }
    cout << endl;
    
    bool found = false;
    for (int i = 0; i < SIZE; i++) {
        if (arr[i] == 0) {
            cout << "first zero at index: " << i << endl;
            found = true;
            break;
        }
    }

    if (!found) {
        cout << "array has no zero elements." << endl;
    }
}


