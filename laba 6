#include <iostream>
using namespace std;

int main() {
    int N;
    cout << "enter a natural number: ";
    cin >>N;

    while (N <= 0) {
        cout << "error! enter a natural number: ";
        cin >>N;
    }

    int count = 0;
    
    while (N > 0) {
        int digit = N % 10; 

        if (digit > 3) {
            count++;
        }
        N /= 10;            
    }
    cout << "number of digits greater than 3: " << count;
}
