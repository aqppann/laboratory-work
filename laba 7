//6 завдання
#include <iostream>
using namespace std;

int main() {
    int c0;
    int step = 0;
    while (true) {
        cout << "enter a natural number (c0): ";
        cin >> c0;
        
        if (c0 > 0) {
            break;  
        } else {
            cout << "the number must be natural"<<endl;
            cout << "please try again,";
        }
    }
    while (c0 != 1) {
        if (c0 % 2 == 0) {
            c0 = c0 / 2;
        } else {
            c0 = 3 * c0 + 1;
        }
        cout << c0 <<endl;
        step++;
    }
    cout << "steps = " << step;
}

// 7 завдання 
#include <iostream>
using namespace std;

int main() {
    double pi4 = 0.0; 
    long n;

    cout << "Number of iterations? ";
    cin >> n;
    
    for (long i = 0; i < n; i++) {
        double t = 1.0 / (2 * i + 1);     
        if (i % 2 == 0)
            pi4 += t;                    
        else
            pi4 -= t;                     
    }

    cout.precision(20);
    cout << "Pi = " << (pi4 * 4.0) << endl; 
    return 0;
}

// 10 завдання
#include <iostream>
using namespace std;

int main() {
    const int MAX = 50;
    int i, j; 
    int n;

    cout << "enter side size (integer > 1): ";
    if (!(cin >> n)) {
        cout << "invalid input\n";
        return 1;
    }
    if (n <= 1) {
        cout << "sorry, the side size is too small\n";
        return 0;
    }
    if (n > MAX) {
        cout << "sorry, the side size is too big\n";
        return 0;
    }
    cout << '+';
    for (i = 0; i < n - 2; i++)
        cout << '-';
    cout << '+' << endl;

    for (i = 0; i < n - 2; i++) {
        cout << '|';
        for (j = 0; j < n - 2; j++)
            cout << ' ';
        cout << '|' << endl;
    }

    cout << '+';
    for (i = 0; i < n - 2; i++)
        cout << '-';
    cout << '+' << endl;
    return 0;
}

