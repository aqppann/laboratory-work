// 1 завдання

#include <iostream>
#include <algorithm>
#include <ctime>
#include <cstdlib>
using namespace std;

int main() {
    const int m = 12;
    int arr[m];

    srand(time(NULL));
    
    cout << "initial array: ";
    for (int i = 0; i < m; i++) {
        arr[i] = rand() % 50;
        cout << arr[i] << " ";
    }
    cout << endl;

    sort(arr, arr + m);

    cout << "ascending order: ";
    for (int i = 0; i < m; i++) {
        cout << arr[i] << " ";
    }
    cout << endl;

    sort(arr, arr + m, greater<int>());

    cout << "descending order: ";
    for (int i = 0; i < m; i++) {
        cout << arr[i] << " ";
    }
    cout << endl;
}

// 2 завдання
#include <iostream>
#include <ctime>
#include <cstdlib>
using namespace std;

int main() {
    const int m = 12;
    int arr[m];
    
    srand(time(NULL));

    cout << "initial array: ";
    for (int i = 0; i < m; i++) {
        arr[i] = rand() % 50;
        cout << arr[i] << " ";
    }
    cout << endl;

    int maxValue = arr[0];
    int maxIndex = 0;

    for (int i = 1; i < m; i++) {
        if (arr[i] > maxValue) {
            maxValue = arr[i];
            maxIndex = i;
        }
    }
    
    for (int i = 0; i < maxIndex; i++) {
        if (arr[i] < 0) {
            arr[i] = 0;
        }
    }

    cout << "modified array: ";
    for (int i = 0; i < m; i++) {
        cout << arr[i] << " ";
    }
    cout << endl;
}

